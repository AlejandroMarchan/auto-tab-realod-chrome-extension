{
  "manifest_version": 3,
  "name": "Auto Tab Reload",
  "version": "1.0",
  "description": "Automatically reloads the active tab every set amount of time.",
  "permissions": ["tabs", "alarms"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icon128.png"
    }
  },
  "icons": {
    "128": "icon128.png"
  }
}
